# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx,json}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Docker files
[Dockerfile]
indent_size = 4
